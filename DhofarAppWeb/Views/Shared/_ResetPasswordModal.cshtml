<div class="modal fade" id="exampleModalToggle5" aria-hidden="true"
     aria-labelledby="exampleModalToggleLabel5" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <button type="button" class="btn-close p-3" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            <div class="row">
                <div class="col-lg-6 modal-login">
                    <h1 class="modal-title fs-3 navy mb-4" id="exampleModalToggleLabel">
                        إعادة تعيين كلمة المرور
                    </h1>
                    <div id="loginForm">
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label navy">
                                كلمة المرور السابقة
                            </label>
                            <div class="input-group">
                                <div class="input-group">
                                    <input type="password"
                                           class="form-control input" id="exampleInputPassword4"
                                           placeholder="*****">
                                    <span class="password-eye-btn" type="button"
                                          onclick="togglePassword('exampleInputPassword4')">
                                        <i id="eyeIcon2" class="fa-regular fa-eye"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label navy">
                                كلمة المرور الجديدة
                            </label>
                            <div class="input-group">
                                <div class="input-group">
                                    <input type="password"
                                           class="form-control input" id="exampleInputPassword5"
                                           placeholder="*****">
                                    <span class="password-eye-btn" type="button"
                                          onclick="togglePassword('exampleInputPassword5')">
                                        <i id="eyeIcon2" class="fa-regular fa-eye"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit"
                                    class="btn login-form-button btn-sm px-4">
                                تأكيد التعيين
                            </button>
                        </div>
                    </div>

                </div>
                <div class="col-lg-6 d-flex justify-content-end">
                    <img src="./images/login-img.png"
                         class="login-img d-none d-lg-flex" " alt=" Login Image">
                </div>
            </div>
        </div>
    </div>
</div>