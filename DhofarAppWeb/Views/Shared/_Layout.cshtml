    <script>
        $(document).ready(function () {
            // Set the default number of items to show
            var defaultItemsToShow = 4;

            // Get the dropdown menu and the read more link
            var dropdownMenu = $('.custom-dropdown-menu');
            var readMoreLink = $('.read-more');

            // Hide all the items except for the first defaultItemsToShow
            dropdownMenu.find('li').not(':lt(' + defaultItemsToShow + ')').hide();

            // Show the read more link
            readMoreLink.show();

            // When the read more link is clicked, show all the items
            readMoreLink.click(function (e) {
                e.preventDefault();
                dropdownMenu.find('li').show();
                readMoreLink.hide();
            });
        });
    </script>

