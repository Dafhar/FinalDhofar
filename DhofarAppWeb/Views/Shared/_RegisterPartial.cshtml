@model DhofarAppWeb.Dtos.User.RegisterDTO
@{
    ViewData["Title"] = "Sign up Page";
}

<form method="post" action="/User/Register">
    @Html.AntiForgeryToken()

    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <button type="button" class="btn-close p-3 d-flex justify-content-start" data-bs-dismiss="modal" aria-label="Close"></button>
            <div class="col-lg-6 modal-login">
                <h1 class="modal-title fs-3 navy mb-4" id="exampleModalToggleLabel">أهلًا بك بيننا!</h1>
                <div>
                    <div class="mb-3">
                        <div class="row mb-3">
                            <div class="col-lg-6">
                                <label for="FullName" class="form-label navy">الاسم الكامل</label>
                                <input type="text" class="form-control input text-end" id="FullName" name="Fullname" placeholder="الاسم الكامل" asp-for="Fullname">
                                <span asp-validation-for="Fullname" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6">
                                <label for="username" class="form-label navy">اسم المستخدم</label>
                                <input type="text" class="form-control input text-end" id="username" name="UserName" placeholder="اسم المستخدم" asp-for="UserName">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-lg-6">
                                <label for="phone" class="form-label navy">رقم الهاتف النقال</label>
                                <input type="text" class="form-control input text-end custom-placeholder" id="phone" name="PhoneNumber" placeholder="رقم الهاتف النقال" asp-for="PhoneNumber">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6">
                                <label for="email" class="form-label navy">الإيميل / رقم الهاتف</label>
                                <input type="email" class="form-control input text-end" id="email" name="Email" placeholder="الإيميل / رقم الهاتف" asp-for="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <label for="password" class="form-label navy">كلمة المرور</label>
                                <input type="password" class="form-control input" id="password" name="Password" placeholder="كلمة المرور" asp-for="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6">
                                <label for="confirmPassword" class="form-label navy">تأكيد كلمة المرور</label>
                                <input type="password" class="form-control input" id="confirmPassword" name="ConfirmPassword" placeholder="تأكيد كلمة المرور" asp-for="ConfirmPassword">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex">
                        <button type="submit" class="btn login-form-button btn-sm px-3">تسجيل مستخدم جديد</button>
                        <button class="btn login-form-button btn-sm px-4 mx-3" data-bs-target="#exampleModalToggle" data-bs-toggle="modal">لدي حساب</button>
                    </div>
                </div>
            </div>
            <div class="row justify-content-between">
                <div class="col-lg-12 d-flex justify-content-end">
                    <img src="./images/login-img.png" class="login-img d-none d-lg-flex" alt="Login Image">
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}