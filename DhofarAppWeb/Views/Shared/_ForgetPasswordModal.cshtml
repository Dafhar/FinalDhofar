<div class="modal fade" id="exampleModalToggle4" aria-hidden="true"
     aria-labelledby="exampleModalToggleLabel4" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <button type="button" class="btn-close p-3" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            <div class="row">
                <div class="col-lg-6 modal-login">
                    <h1 class="modal-title fs-3 navy mb-4" id="exampleModalToggleLabel">
                        استرجاع كلمة المرور
                    </h1>
                    <div id="loginForm">
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label navy">
                                الإيميل /
                                رقم الهاتف
                            </label>
                            <input type="email" class="form-control input text-end"
                                   id="exampleInputEmail1" placeholder="Salim.a@gmail.com">
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit"
                                    class="btn login-form-button btn-sm px-4">
                                إرسال
                            </button>
                        </div>
                    </div>

                </div>
                <div class="col-lg-6 d-flex justify-content-end">
                    <img src="./images/login-img.png" class="login-img d-none d-lg-flex"
                         alt="
                        Login Image">
                </div>
            </div>
        </div>
    </div>
</div>