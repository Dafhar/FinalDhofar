@{
    ViewData["Title"] = "View Subject Page";
    Layout = "~/views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="ar" dir="rtl">

    <body>
    <!-- main content  -->
    <div class="container-fluid px-4">
        <div class="col-12 main-header px-5 py-2 rounded-3">
            <h4 class="m-0 py-2">إعادة تأهيل الحدائق العامة</h4>
        </div>
        <div class="row d-flex justify-content-between mt-4 mb-3">
            <div class="col-12 col-md-4 col-lg-4 ">
                <div class="profile-box py-5 px-4 d-flex flex-fill align-items-center flex-column h-100">
                    <div class="profile-img-container">
                        <img src=@Url.Content("~/images/profile-img.svg") class="profile-img" alt="Profile Image">
                    </div>

                    <div class="col-6 profile-user-name mt-3 d-flex justify-content-between">
                        <p class="py-1 px-3 m-0 navy-background rounded-pill">مازن دهيش</p>
                        <img src=@Url.Content("~/images/patch-check-fill.svg")>
                    </div>
                    <div class="name">
                        <p class="navy mt-2">المشرف العام</p>

                    </div>

                    <div class="container col-4">
                        <div class="row align-items-center">
                            <div class="col-auto p-0 d-flex align-items-center">
                                <i class="fa-regular fa-face-frown navy"></i>
                            </div>
                            <div class="col px-2">
                                <div class="progress">
                                    <div class="progress-bar custom-progress-color" role="progressbar"
                                         style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                            </div>
                            <div class="col-auto p-0 d-flex align-items-center justify-content-end">
                                <i class="fa-regular fa-face-smile navy"></i>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 col-12 mx-auto mt-5">
                        <div class="row">
                            <div class="col d-flex justify-content-between align-items-center profile-info p-3 rounded-3">
                                <p class="m-0 navy profile-info-title">رقم العضوية</p>
                                <h5 class="m-0 green">١٤٠</h5>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col d-flex justify-content-between align-items-center profile-info p-3 rounded-3">
                                <p class="m-0 navy profile-info-title">المشاركات</p>
                                <h5 class="m-0 green">١</h5>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col d-flex justify-content-between align-items-center profile-info p-3 rounded-3">
                                <p class="m-0 navy profile-info-title">الإعجاب</p>
                                <h5 class="m-0 green">٢</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-8 col-lg-8">
                <div class="mt-4">
                    <div class=" flex-fill p-4 mt-sm-4">

                        <div>
                            <p class="text-center">
                                بسم الله الرحمن الرحيم

                                بداية أشكر بلدية ظفار وكافة القائمين عليها لإتاحتهم لنا هذه الفرصة للمشاركة في وضع
                                المقترحات لما فيه مصلحة المنطقة

                                موضوعي عن الحدائق العامة وكما يعلم الجميع أنها كانت سابقا وقبل سنوات عدة متنفسا لأغلب
                                العوائل ولكن لو نراها الان نجدها قد تحولت الى مواقع شبه مهجورة لعدم صيانتها والاهتمام
                                بتطويرها مواكبة مع تطور العالم من حولنا وخلق منافذ ترفيهية جاذبة للزوار

                                فالحدائق العامة في أي بلد بمثابة رئة تنفس وترفيه من عناء العمل أو الدراسة وغيرها حيث
                                يرتادها الزوار في الأمسيات وأيام العطل الأسبوعية لقضاء أوقات ممتعة خارج المنازل
                                لذا فإن الاهتمام بتنسيق هذه الحدائق وتزويدها بالألعاب الخاصة بالأطفال من مختلف الأعمار
                                إلى جانب خدمات أخرى يحتاجها الزوار مثل :
                                مسجد
                                المطاعم
                                ومحلات المشروبات الباردة والساخنة
                                نافورة راقصة
                                أسواق محلية للأسر المنتجة حيث تكون مصدر رزق لهم بنهاية الاسبوع.

                                ​​​​​​​ناهيكم عن خلق جانب من الترفيه والجذب السياحي لها وهو مطلب المواطنين والمقيمين على
                                حد سواء
                                شاكرين لكم تعاونكم الدائم..
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    </body>
</html>