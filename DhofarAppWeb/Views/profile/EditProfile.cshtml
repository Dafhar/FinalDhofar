@{
    ViewData["Title"] = "EditeProfile Page";
    Layout = "~/views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
    <haed>

    <link href="~/css/user-profile.css" rel="stylesheet" />
</haed>

    <body>
    <!-- main content  -->
    <div class="container-fluid px-4">
        <div class="col-12 main-header px-5 py-2 rounded-3">
            <h4 class="m-0 py-2">ملفي الشخصي</h4>
        </div>
        <div class="row d-flex justify-content-between mt-4 mb-3">

            <div class="col-12 col-md-4 col-lg-4 ">
                <div class="profile-box py-5 px-4 d-flex flex-fill align-items-center flex-column h-100">
                    <div class="profile-img-container">
                        <img src=@Url.Content("~/images/profile-img.svg") class="profile-img" alt="Profile Image">
                    </div>

                    <div class="col-6 profile-user-name mt-3 d-flex justify-content-center">
                        <p class="py-1 px-3 m-0 navy-background rounded-pill">مازن دهيش</p>
                        <img class="px-1" src=@Url.Content("~/images/patch-check-fill.svg")>
                    </div>
                    <div class="name">
                        <p class="navy mt-2">المشرف العام</p>

                    </div>

                    <div class="container col-4">
                        <div class="row align-items-center">
                            <div class="col-auto p-0 d-flex align-items-center">
                                <i class="fa-regular fa-face-frown navy"></i>
                            </div>
                            <div class="col px-2">
                                <div class="progress">
                                    <div class="progress-bar custom-progress-color" role="progressbar"
                                         style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                            </div>
                            <div class="col-auto p-0 d-flex align-items-center justify-content-end">
                                <i class="fa-regular fa-face-smile navy"></i>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 col-12 mx-auto mt-5">
                        <div class="row">
                            <div class="col d-flex justify-content-between align-items-center profile-info p-3 rounded-3">
                                <p class="m-0 navy profile-info-title">رقم العضوية</p>
                                <h5 class="m-0 green">١٤٠</h5>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col d-flex justify-content-between align-items-center profile-info p-3 rounded-3">
                                <p class="m-0 navy profile-info-title">المشاركات</p>
                                <h5 class="m-0 green">١</h5>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col d-flex justify-content-between align-items-center profile-info p-3 rounded-3">
                                <p class="m-0 navy profile-info-title">الإعجاب</p>
                                <h5 class="m-0 green">٢</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-8 col-lg-8">
                <div class="row mt-sm-4">
                    <div class="col-12 col-md-6">
                        <div class="flex-fill mt-sm-4 mb-3">
                            <label class="navy mb-2">الاسم الكامل</label>
                            <input class="edit-profile-box form-control" placeholder="مازن دهيش">
                        </div>
                        <div class="flex-fill mt-sm-4 mb-3">
                            <label class="navy mb-2">الإيميل</label>
                            <input class="edit-profile-box form-control" placeholder="Mazin.d@gmail.com">
                        </div>
                        <div class="flex-fill mt-sm-4 mb-3">
                            <label class="navy mb-2">البلد</label>
                            <input class="edit-profile-box form-control" placeholder="عمان">
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="flex-fill mt-sm-4 mb-3">
                            <label class="navy mb-2">رقم الهاتف النقال</label>
                            <div class="input-group">
                                <input type="text" class="form-control edit-profile-box text-end custom-placeholder"
                                       id="phone" placeholder="999999" required>
                            </div>
                            <span class="input-group-text">
                                <img src=@Url.Content("~/images/oman-flag.svg") alt="Flag" class="flag">
                            </span>
                        </div>
                        <div class="flex-fill mt-sm-4 mb-3">
                            <label class="navy mb-2">الجنس</label>
                            <input class="edit-profile-box form-control" placeholder="ذكر">
                        </div>
                        <div class="flex-fill mt-sm-4 mb-3">
                            <label class="navy mb-2">الولاية</label>
                            <input class="edit-profile-box form-control" placeholder="صلالة">
                        </div>
                    </div>
                </div>
                <div class=" flex-fill mt-sm-4 mb-3">
                    <label class="navy mb-2">نبذة عني</label>
                    <div class="form-floating p-0">
                        <textarea class="form-control p-2" id="floatingTextarea2" style="height: 100px"></textarea>
                    </div>
                </div>
                <div class=" flex-fill mt-sm-4 mb-3">
                    <label class="navy mb-2">الصورة الشخصية</label>
                    <div class="">
                        <div class="form-check form-switch d-flex justify-content-between px-3 col-6 col-md-3 p-0">
                            <p>لون</p>
                            <input class="form-check-input" type="checkbox" id="toggleSwitch">
                            <p>صورة</p>
                        </div>
                        <div id="container1" class="container-item col-6 col-md-4">
                            <div class="row mt-2">
                                <div class="col-md-12">
                                    <label for="fileInput" class="upload-box" id="upload-box">
                                        <div class="d-flex flex-column align-items-center">
                                            <i class="fa-solid fa-arrow-up-from-bracket upload-icon navy"></i>
                                            <span class="upload-text mt-1">اضغط للتحميل</span>
                                            <span class="upload-text-small">
                                                2MB الحد الأقصى
                                                لحجم الملف
                                            </span>
                                            <input type="file" id="fileInput" style="display: none;"/>
                                        </div>

                                        <div class="btn-group d-flex justify-content-center" role="group">
                                            <button type="button" class="btn delete-btn" id="delete-btn">
                                                <i class="fas fa-trash-alt delete-icon"></i>
                                            </button>
                                            <button type="button" class="btn view-btn" id="view-btn" data-toggle="modal"
                                                    data-target="#myModal">
                                                <i class="far fa-eye"></i>
                                            </button>
                                        </div>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <!-- The Modal -->
                        <div class="modal fade" id="myModal">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-body">
                                        <img class="img-fluid" id="modal-image">
                                        <!-- Your image content goes here -->
                                        <!-- Button placed at the bottom of the modal body -->
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">إغلاق</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div id="container2" class="container-item col-6 col-md-3" style="display: none;">
                            <div class="row d-flex justify-content-evenly align-items-center">
                                <button class="colored-box navy-background align-self-center"></button>
                                <button class="colored-box light-blue-background"></button>
                                <button class="colored-box lime-background"></button>
                                <button class="colored-box green-background "></button>
                                <button class="colored-box gray-background"></button>
                            </div>
                        </div>
                        <div class="col-4 p-0 mt-3">
                            <button class="btn login-button w-100">حفظ التغييرات</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    </body>
</html>