@model IEnumerable<DhofarAppWeb.Model.DepartmentType>

@{
    ViewData["Title"] = "Department Types";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="text-center mb-4">
                <h2>Department Types</h2>
                <a class="btn btn-success mt-3" asp-action="Create">Create New</a>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-striped text-center">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th class="col-md-4">English Name</th>
                            <th class="col-md-4">Arabic Name</th>
                            <th class="col-md-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name_En</td>
                                <td>@item.Name_Ar</td>
                                <td>
                                    <div class="d-flex justify-content-center" role="group">
                                        <a class="btn btn-outline-warning me-2" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                        <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return confirm('Are you sure you want to delete this department type?');">
                                            <button type="submit" class="btn btn-outline-danger">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
